{
  "manifest_version": 2,

  "name": "Deeply Connected Digital",
  "description": "CBC Article Augmentation",
  "version": "0.0.1",
  "background": {
    "scripts": ["/src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://google.com/*"],
      "js": ["/lib/zepto.min.js", "/src/content.js"],
      "all_frames": true
    }
  ],
  "browser_action": { 
    "default_popup": "/src/popup.html", 
    "default_icon" : "img/icon/cbc_bfly.png"
    },
  "permissions": ["*://google.com/*"],
  "content_security_policy": "script-src 'self' https://cdn.mxpnl.com; object-src 'self'"
}
